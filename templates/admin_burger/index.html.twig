{% extends 'admin.html.twig' %}
{% block body %}
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
        Ajout de burger
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Ajout de burger</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="{{ path('burger_add') }}" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="formGroupExampleInput">Libelle</label>
                            <input type="text" name="libelle" class="form-control" id="formGroupExampleInput" placeholder="Example input" required>
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Prix</label>
                            <input type="text" name="prix" class="form-control" id="formGroupExampleInput2" placeholder="Another input" required>
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Image</label>
                            <input type="file" name="image" class="form-control" required>
                        </div>
                        <input type="submit" class="btn btn-primary" value="Ajouter">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>

                </div>
            </div>
        </div>
    </div>

    {% if update is defined %}
    <div class="card">
        <div class="m-3 mb-0">
            <p>Modifier un burger</p>
        </div>
        <div class="card-body">
            <form method="post" action="{{ path('burger_save') }}">
                <div class="row">
                    <div class="col">
                        <input type="text" name="libelle" class="form-control" value="{{ update.libelle }}" placeholder="First name">
                        <input type="text" name="id" value="{{ update.id }}" hidden>
                    </div>
                    <div class="col">
                        <input type="text" name="prix" value="{{ update.prix }}" class="form-control" placeholder="Last name">
                    </div>
                    <div class="col">
                        <input type="submit" class="form-control btn btn-warning" value="Modifier">
                    </div>
                </div>
            </form>
        </div>
    </div>
    {% endif %}


    <div class="row mt-3">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Authors table</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0 table-hover">
                            <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Libelle</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Prix</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for burger in burgers%}
                            <tr>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div>
                                            <img src="{{ asset("produits/") }}{{burger.image}}" class="avatar avatar-sm me-3" alt="user1">
                                        </div>
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">{{ burger.libelle }}</h6>
                                        </div>
                                    </div>
                                </td>

                                <td class="align-middle text-center text-sm">
                                    <span class="badge badge-sm bg-gradient-success">{{ burger.prix }}</span>
                                </td>
                                <td class="align-middle">
                                    <a href="{{ path('burger_update', {'id':burger.id}) }}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

{% endblock %}